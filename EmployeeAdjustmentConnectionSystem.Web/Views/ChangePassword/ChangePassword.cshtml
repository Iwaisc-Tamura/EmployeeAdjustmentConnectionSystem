@model EmployeeAdjustmentConnectionSystem.COM.Models.ChangePasswordViewModelSd
@{
  ViewBag.Title = "パスワード変更";
}

<h2 class="col-xs-offset-4">@ViewBag.Title</h2>
<hr />
@using(Html.BeginForm("ChangePassword", "ChangePassword", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
  @Html.AntiForgeryToken()
  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-offset-4 col-xs-8">
        <section id="changePassword">
          <h4>パスワード変更</h4>
          <hr />
          @Html.ValidationSummary("", new { @class = "text-danger" })
          <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
              @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control styleA" })
            </div>
          </div>
          <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
              @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
          </div>
          <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
              @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <button type="button" name="DmyChange" value="パスワードの変更" class="btn-default" id="dmychange">パスワードの変更</button>
            </div>
          </div>
        @* 2017-03-31 sbc-sagara add str 戻るボタン追加 *@
        <div class="col-xs-offset-2">
          @* 2022-03-25 iwai-tamura upd str  *@
            <button type="button" onclick="history.back()">戻る</button>
            @*<button type="button" name="Back" value="戻る" class="btn-default" onclick="location.href('../TOP/Index')">戻る</button>*@
          @* 2022-03-25 iwai-tamura upd end  *@
        </div>
        @* 2017-03-31 sbc-sagara add end 戻るボタン追加 *@
        </section>
      </div>
    </div>
  </div>
  @*隠しボタンエリア*@
  <div style="height:0px;">
      <button type="submit" name="Change" id="changebutton" value="パスワードの変更" class="btn invisible">パスワードの変更</button>
  </div>

  @Scripts.Render("~/Scripts/js/cpw")

}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
